<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:admobsdk="http://schemas.android.com/apk/res/com.androhi.mytimetable"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<RelativeLayout android:id="@+id/layout_header"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		android:background="@color/dkgreen"
		>
		<TextView android:id="@+id/title2_main"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:layout_marginLeft="10dip"
			android:textSize="12sp"
			android:textColor="@color/white"
			android:gravity="center_vertical"
			/>
		<TextView android:id="@+id/title1_main"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginBottom="5dip"
			android:layout_marginLeft="10dip"
			android:textSize="25sp"
			android:textColor="@color/white"
			android:gravity="center_vertical"
			android:layout_alignParentBottom="true"
			/>
		<TextView android:id="@+id/dataType_main"
			android:layout_width="wrap_content"
			android:layout_height="55dip"
			android:layout_weight="1"
			android:layout_alignBaseline="@id/title1_main"
			android:textSize="15sp"
			android:textColor="@color/white"
			android:gravity="center_vertical"
			android:layout_toRightOf="@id/title1_main"
			/>
		<Button android:id="@+id/confirm_main" 
			android:text="@string/confirm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_alignParentRight="true"
			/>
	</RelativeLayout>
<View
	android:layout_width="fill_parent"
	android:layout_height="0.75dip"
	android:background="@color/gray"
	/>
<ListView android:id="@+id/android:list"
	android:layout_width="fill_parent"
	android:layout_height="0dip"
	android:layout_weight="1"
	/>
<TextView android:id="@+id/android:empty"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/no_timetable"
	/>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="48dip"
	>
</LinearLayout>
</LinearLayout>
